---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon-180x180.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- Inter font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body
    class="bg-stone-100 dark:bg-neutral-950 text-stone-800 dark:text-neutral-200 antialiased"
  >
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Adding Vercel Analytics -->
    <Analytics />

    <script is:inline>
      // Enable automatic scroll restoration to maintain scroll position on refresh
      if ("scrollRestoration" in history) {
        history.scrollRestoration = "auto";
      }

      // Handle hash navigation after page loads and animations start
      if (window.location.hash) {
        // Wait for DOM and animations to be ready, then scroll to hash
        setTimeout(() => {
          const hash = window.location.hash;
          const element = document.querySelector(hash);
          if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
          }
        }, 200);
      }
    </script>
  </body>
</html>
