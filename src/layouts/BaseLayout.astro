---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string; // Optional, defaults to /og-image.png
}

const { title, description = "Personal website", ogImage = "/og-image.png" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon-180x180.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={new URL(ogImage, Astro.site || Astro.url).href} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site || Astro.url).href} />

    <!-- Inter font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Google+Sans+Code:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>

    <!-- Adding Vercel Analytics -->
    <Analytics />

    <script is:inline>
      // Enable automatic scroll restoration to maintain scroll position on refresh
      if ("scrollRestoration" in history) {
        history.scrollRestoration = "auto";
      }

      // Handle hash navigation after page loads and animations start
      if (window.location.hash) {
        // Wait for DOM and animations to be ready, then scroll to hash
        setTimeout(() => {
          const hash = window.location.hash;
          const element = document.querySelector(hash);
          if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
          }
        }, 200);
      }
    </script>
  </body>
</html>
